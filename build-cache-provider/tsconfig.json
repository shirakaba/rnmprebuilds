// Based on:
// https://github.com/expo/examples/blob/master/with-github-remote-build-cache-provider/build-cache-provider/tsconfig.json
{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    // We want top-level imports/exports to be transpiled to CJS, yet dynamic
    // import() to be preserved (which is needed to import ESM from a CJS
    // context).
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "scripts/**/*"]
}
